<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#c0000000">

    <LinearLayout
        android:layout_width="315dp"
        android:layout_height="303dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/saveSubgoalBtnGG"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <TextView
            android:id="@+id/SubGoalLabelSGViewGG"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:text="Subgoal name"
            android:textAlignment="center"
            android:textColor="@color/grey"
            android:textSize="16sp"

            android:textStyle="bold" />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/subGoalInputGG"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:height="51dp"
            android:background="@drawable/boarder"
            android:ems="10"
            android:hint="subgoal"
            android:inputType="textPersonName"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/PersonalDeadlineLabelGG"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:text="Subgoal deadline"
            android:textAlignment="center"
            android:textColor="@color/grey"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/subGoalDeadlineInputGG"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:height="51dp"
            android:background="@drawable/boarder"
            android:ems="10"
            android:hint="subgoal - deadline"
            android:inputType="textPersonName"
            android:textAlignment="center"
            android:textSize="20dp" />

        <RadioGroup
            android:id="@+id/radioAssignment"
            android:layout_width="match_parent"
            android:checkedButton="@id/assignToSelfRadioGG"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/assignToSelfRadioGG"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Assign to self"
                android:textColor="@color/white" />

            <RadioButton
                android:id="@+id/makeAvailableRadioGG"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Make available to group members"
                android:textColor="@color/white" />
        </RadioGroup>

        <TextView
            android:id="@+id/HowLongLabelGG"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:text="How long will it take?"
            android:textAlignment="center"
            android:textColor="@color/grey"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/subGoalHowLongInputGG"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:height="51dp"
            android:background="@drawable/boarder"
            android:ems="10"
            android:hint="e.g 3 hours"
            android:inputType="textPersonName"
            android:textAlignment="center"
            android:textSize="20dp" />

    </LinearLayout>

    <ImageButton
        android:id="@+id/exitSubgoalBtnGG"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#c0000000"
        android:minWidth="48dp"
        android:minHeight="48dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.909"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.02"
        app:srcCompat="@android:drawable/ic_menu_close_clear_cancel"
        tools:ignore="SpeakableTextPresentCheck" />

    <Button
        android:id="@+id/saveSubgoalBtnGG"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Subgoal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.529"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.616" />


</androidx.constraintlayout.widget.ConstraintLayout>