<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/linearLayout4GG"
        android:layout_width="397dp"
        android:layout_height="296dp"
        android:background="@color/light_grey"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/linearLayout42GG"
        app:layout_constraintVertical_bias="0.5">

        <TextView
            android:id="@+id/ChatRecyclerLabelGG"
            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:textSize="16sp"
            android:textStyle="bold" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/ChatRecyclerViewGG"
            android:layout_width="match_parent"
            android:layout_height="179dp">

        </androidx.recyclerview.widget.RecyclerView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:orientation="horizontal">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/chatInputGG"
                android:layout_width="324dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textMultiLine"
                android:minHeight="48dp"
                android:scrollHorizontally="false"
                tools:ignore="TouchTargetSizeCheck,TouchTargetSizeCheck" />

            <ImageButton
                android:id="@+id/uploadChatGG"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                app:srcCompat="@android:drawable/stat_sys_upload" />
        </LinearLayout>


    </LinearLayout>

    <TextView
        android:id="@+id/goalInfoGG"
        android:layout_width="251dp"
        android:layout_height="121dp"
        android:layout_marginTop="60dp"
        android:layout_weight="1"
        android:background="@drawable/boarder"
        android:backgroundTint="#135259"
        android:text="TextView"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/linearLayout2GG"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/reportProgressBtnGG"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Report Progress"
        android:textAllCaps="false"
        android:textSize="11dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/goalInfoGG"
        app:layout_constraintHorizontal_bias="0.662"
        app:layout_constraintStart_toEndOf="@+id/goalInfoGG"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.206" />

    <Button
        android:id="@+id/seeProgressBtnGG"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="See Progress"
        android:textAllCaps="false"
        android:textSize="11dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/goalInfoGG"
        app:layout_constraintHorizontal_bias="0.309"
        app:layout_constraintStart_toEndOf="@+id/goalInfoGG"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.206" />

    <LinearLayout
        android:id="@+id/linearLayout2GG"
        android:layout_width="134dp"
        android:layout_height="125dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toStartOf="@+id/goalInfoGG"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/goalInfoGG">

        <Button
            android:id="@+id/startWorkingBtnGG"
            android:layout_width="match_parent"
            android:layout_height="66dp"
            android:text="Start Working"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/setReminderBtnGG"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Set Reminder"
            android:textAllCaps="false" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout42GG"
        android:layout_width="match_parent"
        android:layout_height="285dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.461"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/reportProgressBtnGG"
        app:layout_constraintVertical_bias="0.0">

        <TextView
            android:id="@+id/SubGoalRecyclerLabelGG"
            android:layout_width="match_parent"
            android:layout_height="37dp"
            android:textSize="16sp"
            android:textStyle="bold" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/subGoalRecyclerViewFullGG"
            android:layout_width="393dp"
            android:layout_height="match_parent" />


    </LinearLayout>

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarSingleGoalFullDisplayGG"
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:background="@color/teal_700"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:menu="@menu/groupgoalsinglegoaltoolbar"
        app:navigationIcon="@drawable/ic_backbtn" />

    <ImageView
        android:id="@+id/startWorkingBtnCancel"
        android:layout_width="42dp"
        android:layout_height="37dp"
        android:background="@color/dark_grey"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.917"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.118"
        app:srcCompat="@drawable/whitecancel_foreground" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/startWorkingRecyclerView"
        android:layout_width="336dp"
        android:layout_height="316dp"
        android:translationZ="90dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/startWorkingBtnCancel" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:orientation="vertical"
        android:translationZ="200dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/cancelSetReminderBtn"
                android:layout_width="81dp"
                android:textSize="16dp"
                android:textColor="#00BCD4"

                android:layout_height="wrap_content"
                android:text="\t\tcancel" />

            <TextView
                android:id="@+id/setReminderLabel"
                android:layout_width="226dp"
                android:textSize="16dp"
                android:textColor="@color/black"
                android:layout_height="wrap_content"
                android:text="Choose your Date"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/doneSetReminderBtn"
                android:layout_width="match_parent"
                android:textSize="16dp"
                android:layout_height="wrap_content"
                android:textColor="#00BCD4"
                android:textAlignment="textEnd"
                android:text="Done\t\t" />
        </LinearLayout>

        <com.github.florent37.singledateandtimepicker.SingleDateAndTimePicker
            android:id="@+id/setReminderPicker"
            android:layout_width="match_parent"
            android:layout_height="270dp"
            android:background="#e6e8e6"
            android:divider="@color/black"
            android:translationZ="100dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintVertical_bias="1.0" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>