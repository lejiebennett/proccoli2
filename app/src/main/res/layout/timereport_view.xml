<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@null">

    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="331dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.214">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="@color/grey"
            android:text="Report past work!\nSelect the start and finish time of your past study session that you forgot to use the timer for Your progress charts will be updated accordingly."
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/StartTimeLabel"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:background="@color/grey"
            android:text="Start time"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/startTimeInput"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:height="51dp"
            android:background="@drawable/boarder"
            android:ems="10"
            android:hint="start time"
            android:inputType="textPersonName"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/StopTimeLabel"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:background="@color/grey"
            android:text="Finish time"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/stopTimeInput"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:height="51dp"
            android:background="@drawable/boarder"
            android:ems="10"
            android:hint="finish time"
            android:inputType="textPersonName"
            android:textSize="18dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="118dp"
            android:background="@color/grey"
            android:orientation="horizontal">

            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <Button
                android:id="@+id/submitTimeReport"
                android:layout_width="117dp"
                android:layout_height="wrap_content"
                android:text="submit"
                android:textAllCaps="false"

                android:textSize="16sp" />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <Button
                android:id="@+id/cancelTimeReport"
                android:layout_width="116dp"
                android:layout_height="wrap_content"
                android:text="cancel"
                android:textAllCaps="false"
                android:textSize="16sp" />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>