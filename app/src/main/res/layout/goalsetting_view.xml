<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#c0000000">

    <LinearLayout
        android:layout_width="371dp"
        android:layout_height="141dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/subGoalRecyclerViewGoalSetting"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/exitGoalSettingBtn">

        <LinearLayout
            android:id="@+id/linearLayoutGoalSetting"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/completeByGoalSetting"
                android:layout_width="174dp"
                android:layout_height="50dp"
                android:background="@color/white"
                android:text="TextView" />

            <Button
                android:id="@+id/reviseCompleteByBtn"
                android:layout_width="173dp"
                android:layout_height="wrap_content"
                android:text="Revise Personal Deadline"
                android:textAllCaps="false" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout6"
            android:layout_width="172dp"
            android:layout_height="111dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/dueDateGoalSetting"
                android:layout_width="174dp"
                android:layout_height="50dp"
                android:background="@color/white"
                android:text="TextView" />

            <Button
                android:id="@+id/reviseDueDateBtn"
                android:layout_width="173dp"
                android:layout_height="59dp"
                android:text=" Revise Due Date"
                android:textAllCaps="false" />
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/addSubGoalSettingPage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Subgoals"
        android:textAllCaps="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.768" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/subGoalRecyclerViewGoalSetting"
        android:layout_width="388dp"
        android:layout_height="257dp"
        android:layout_marginBottom="4dp"
        app:layout_constraintBottom_toTopOf="@+id/addSubGoalSettingPage"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.478"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintVertical_bias="0.0">

    </androidx.recyclerview.widget.RecyclerView>

    <ImageButton
        android:id="@+id/exitGoalSettingBtn"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:background="#c0000000"
        android:minWidth="48dp"
        android:minHeight="48dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.946"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.02"
        app:srcCompat="@android:drawable/ic_menu_close_clear_cancel"
        tools:ignore="SpeakableTextPresentCheck" />

</androidx.constraintlayout.widget.ConstraintLayout>